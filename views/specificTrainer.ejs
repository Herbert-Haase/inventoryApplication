<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trainer</title>
  </head>
  <body>
    <% if (locals.trainer){ %> <% trainer.forEach((trainer)=>{ %>
    <li>Trainer: <%= trainer.trainer_name %></li>
    <a href="/trainer/<%= trainer.id %>/update"><button>Update</button></a>
    <form action="/trainer/delete" method="post">
      <input type="hidden" name="id" value="<%= trainer.id %>">
      <a
        type="submit"
        onclick="return confirm('Are you sure you want to delete this records?')"
        ><button>Delete</button></a
      >
    <% })} %>
  </body>
</html>
